<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidstudydata.ViewActivity">

    <com.androidstudydata.view.TrackView
        android:id="@+id/track_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        app:layout_constraintBottom_toBottomOf="@+id/rest"
        android:visibility="gone"
        />
    
    <Button
        android:visibility="gone"
        android:id="@+id/rest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="重置"
        />

    <com.androidstudydata.view.WaveView
        android:visibility="gone"
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.androidstudydata.matrix.MatrixSetPolyToPoly
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按钮"
            />
    </FrameLayout>

    <!--自定义view测试-->

    <com.androidstudydata.view.RedarView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</android.support.constraint.ConstraintLayout>
