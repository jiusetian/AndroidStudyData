<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidstudydata.ViewActivity">

    <com.androidstudydata.view.TrackView
        android:id="@+id/track_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        app:layout_constraintBottom_toBottomOf="@+id/rest"
        android:visibility="gone"
        />
    
    <Button
        android:visibility="gone"
        android:id="@+id/rest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="重置"
        />

    <com.androidstudydata.view.WaveView
        android:visibility="gone"
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.androidstudydata.matrix.MatrixSetPolyToPoly
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</android.support.constraint.ConstraintLayout>
